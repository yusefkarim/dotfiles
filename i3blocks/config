# i3blocks config file

#Global properties
separator_block_width=15
markup=none

#Path to default scripts
command=/usr/lib/i3blocks/$BLOCK_NAME

# Generic media player support
#[mediaplayer]
#instance=rhythmbox
#interval=5
#signal=10

[system]
color=#66D9EF
label=Arch
command=uname -sr
interval=once

[keyindicator]
instance=CAPS
interval=once
signal=11

# Memory usage
[ram]
command=free | awk '/Mem/ {printf("%.2f%", ($3/$2)*100)}'
color=#DC2672
label=MEM
interval=30

[swap]
command=free | awk '/Swap/ {printf("%.2f%", ($3/$2)*100)}'
color=#CC65FE
label=SWAP
interval=30

